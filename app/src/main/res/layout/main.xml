<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/main_image"
        android:layout_width="match_parent"
        android:layout_height="195dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:background="#d4d4d4"
        app:cardCornerRadius="6dp"
        app:cardBackgroundColor="#fdefd3"
        app:cardElevation="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/main_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/the_cat"
                    android:layout_marginRight="10dp"/>

                <me.myatminsoe.mdetect.MMTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#f22121"
                    android:layout_gravity="center"
                    android:text="ဗေဒင်မေးမယ်..." />
            </LinearLayout>

            <ViewFlipper
                android:id="@+id/myflipper1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:padding="5dp"
                android:layout_marginBottom="10dp">

                <android.support.v7.widget.CardView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="5dp"
                    app:cardBackgroundColor="#f9f9f9">
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="5dp"
                    app:cardBackgroundColor="#f9f9f9">
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="5dp"
                    app:cardBackgroundColor="#f9f9f9">
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="5dp"
                    app:cardBackgroundColor="#f9f9f9">
                </android.support.v7.widget.CardView>
            </ViewFlipper>

            <ViewFlipper
                android:id="@+id/myflipper2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@+id/myflipper1"
                android:layout_alignParentBottom="true"
                android:padding="5dp"
                android:layout_marginBottom="10dp">

                <android.support.v7.widget.CardView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="5dp"
                    app:cardBackgroundColor="#f9f9f9">
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="5dp"
                    app:cardBackgroundColor="#f9f9f9">
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="5dp"
                    app:cardBackgroundColor="#f9f9f9">
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="5dp"
                    app:cardBackgroundColor="#f9f9f9">
                </android.support.v7.widget.CardView>
            </ViewFlipper>

            <ViewFlipper
                android:id="@+id/myflipper3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@+id/myflipper2"
                android:layout_alignParentBottom="true"
                android:padding="5dp"
                android:layout_marginBottom="10dp">

                <android.support.v7.widget.CardView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="5dp"
                    app:cardBackgroundColor="#f9f9f9">
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="5dp"
                    app:cardBackgroundColor="#f9f9f9">
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="5dp"
                    app:cardBackgroundColor="#f9f9f9">
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="5dp"
                    app:cardBackgroundColor="#f9f9f9">
                </android.support.v7.widget.CardView>
            </ViewFlipper>

            <ViewFlipper
                android:id="@+id/myflipper4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@+id/myflipper3"
                android:layout_alignParentBottom="true"
                android:padding="5dp"
                android:layout_marginBottom="10dp">

                <android.support.v7.widget.CardView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="5dp"
                    app:cardBackgroundColor="#f9f9f9">
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="5dp"
                    app:cardBackgroundColor="#f9f9f9">
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="5dp"
                    app:cardBackgroundColor="#f9f9f9">
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="5dp"
                    app:cardBackgroundColor="#f9f9f9">
                </android.support.v7.widget.CardView>
            </ViewFlipper>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/the_option"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:layout_marginRight="5dp"
                android:contextClickable="true"
                android:background="?attr/selectableItemBackgroundBorderless"/>

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/the_help"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:clickable="true"
                android:background="?attr/selectableItemBackgroundBorderless"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <me.myatminsoe.mdetect.MMTextView
        android:id="@+id/second_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#f22121"
        android:layout_margin="10dp"
        android:layout_below="@+id/main_image"
        android:text="မေးနိုင်သော အကြောင်းအရာများ..." />
    <LinearLayout
        android:id="@+id/first_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/second_title"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:weightSum="3">

        <android.support.v7.widget.CardView
            android:id="@+id/layout_handtouch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="#d4d4d4"
            android:clickable="true"
            app:cardCornerRadius="6dp"
            app:cardElevation="1dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/image_one"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/the_hand" />

                <View
                    android:id="@+id/view_one"
                    android:layout_width="110dp"
                    android:layout_height="1dp"
                    android:layout_below="@+id/image_one"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="#7ef23a" />

                <me.myatminsoe.mdetect.MMTextView
                    android:id="@+id/mmtext_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_one"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="လက်ထောက်"
                    android:textColor="#5b5b5b"
                    android:textSize="14sp" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/layout_lovelove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="#d4d4d4"
            android:clickable="true"
            app:cardCornerRadius="6dp"
            app:cardElevation="1dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/image_two"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/the_couple" />

                <View
                    android:id="@+id/view_two"
                    android:layout_width="110dp"
                    android:layout_height="1dp"
                    android:layout_below="@+id/image_two"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="#7ef23a" />

                <me.myatminsoe.mdetect.MMTextView
                    android:id="@+id/mmtext_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_two"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="မွေးနေ့"
                    android:textColor="#5b5b5b"
                    android:textSize="14sp" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/layout_tarot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="#d4d4d4"
            android:clickable="true"
            app:cardCornerRadius="6dp"
            app:cardElevation="1dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/image_three"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/the_card" />

                <View
                    android:id="@+id/view_three"
                    android:layout_width="110dp"
                    android:layout_height="1dp"
                    android:layout_below="@+id/image_three"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="#7ef23a" />

                <me.myatminsoe.mdetect.MMTextView
                    android:id="@+id/mmtext_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_three"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="တားရော့"
                    android:textColor="#5b5b5b"
                    android:textSize="14sp" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/second_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/first_group"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:id="@+id/layout_maharbot"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="#d4d4d4"
            android:clickable="true"
            app:cardCornerRadius="6dp"
            app:cardElevation="1dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/image_four"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/the_board" />

                <View
                    android:id="@+id/view_four"
                    android:layout_width="110dp"
                    android:layout_height="1dp"
                    android:layout_below="@+id/image_four"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="#edc24d" />

                <me.myatminsoe.mdetect.MMTextView
                    android:id="@+id/mmtext_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_four"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="မဟာဘုတ််"
                    android:textColor="#5b5b5b"
                    android:textSize="14sp" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/layout_comingsoon"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="#d4d4d4"
            android:clickable="true"
            app:cardCornerRadius="6dp"
            app:cardElevation="1dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/image_five"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/the_coffeecup" />

                <View
                    android:id="@+id/view_five"
                    android:layout_width="110dp"
                    android:layout_height="1dp"
                    android:layout_below="@+id/image_five"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="#edc24d" />

                <me.myatminsoe.mdetect.MMTextView
                    android:id="@+id/mmtext_five"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_five"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="Coming soon"
                    android:textColor="#5b5b5b"
                    android:textSize="14sp" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</RelativeLayout>